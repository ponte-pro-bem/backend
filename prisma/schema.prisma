// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String @unique
  password String
  isAdmin Boolean
}

model Institution {
  id String @id @default(uuid())
  name String
  images String[]
  description String
  campaigns Campaign[]
  pixQRCodeRaw String
}

model Campaign {
  id String @id @default(uuid())
  name String
  images String[]
  description String
  pixQRCodeRaw String
  institution Institution @relation(fields: [institutionId], references: [id])
  
  institutionId String
}